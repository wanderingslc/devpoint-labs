<div class='page-header'>
  <h1>
      <%= t(:contact_me) %>
      <small> <%= t(:get_in_touch) %></small>
  </h1>
  <%= simple_form_for @message, url: contact_path do |f| %>
    <div class="form-inputs">
      <%= f.input :email, placeholder: "#{t(:email_address_placeholder)}" %>
      <%= f.input :name, placeholder: "#{t(:email_name_placeholder)}" %>
      <%= f.input :subject, placeholder: "#{t(:email_subject_placeholder)}" %>
      <%= f.input :body, placeholder: "#{t(:email_body_placeholder)}", as: :text, input_html: {rows: 8} %>
    </div>
    <br />
    <div class='text-center'>
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

