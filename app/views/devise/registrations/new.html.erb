<h2>Sign up
  <%if @twitter %>
    <small>
      Complete your twitter sign up
    </small>
  <% end %>
</h2>
<%= @project %>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <% if @twitter %>
      <h3> <%= image_tag @twitter.info.image if @twitter%> Welcome <%=@twitter.info.name %>! We need you to set up your email address </h3>
    <% end %>
    <% unless @twitter %>
      <%= f.input :first_name, :required => true, :autofocus => true %>
      <%= f.input :last_name, :required => true %>
      <%= f.input :provider %>
      <%= f.input :uid %>    
    <% end %>
    <%= f.input :email, :required => true %>
    <%= f.input :password, :required => true unless @twitter%>
    <%= f.input :password_confirmation, :required => true unless @twitter%>

    <%# f.simple_fields_for :picture do |pic| %>
      <%# pic.input :image %>
    <%# end %>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
