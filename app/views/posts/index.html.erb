<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Published at</th>
    <th>User</th>
    <th>Seo title</th>
    <th>Seo description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.body %></td>
    <td><%= post.published_at %></td>
    <td><%= post.user %></td>
    <td><%= post.seo_title %></td>
    <td><%= post.seo_description %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) if can? :edit, post %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }  if can? :delete, post %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path if can? :create, Post %>
